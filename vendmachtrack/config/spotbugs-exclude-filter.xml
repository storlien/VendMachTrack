<FindBugsFilter>
    <!-- Ignore EI_EXPOSE_REP2 for MachineTrackerController constructor -->
    <!-- Spotbugs complains about storing an externally mutable object in the Controller class. -->
    <!-- This is standard practice in Spring Boot and generally not considered a security risk. -->
    <!-- The constructor uses the @Autowired annotation for dependency injection. -->
    <Match>
        <Class name="vendmachtrack.springboot.controller.MachineTrackerController"/>
        <Method name="&lt;init&gt;"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Ignore EI_EXPOSE_REP2 for MachineTrackerService constructor -->
    <!-- Spotbugs complains about storing an externally mutable object in the Service class. -->
    <!-- This is standard practice in Spring Boot and generally not considered a security risk. -->
    <!-- The constructor uses the @Autowired annotation for dependency injection. -->
    <Match>
        <Class name="vendmachtrack.springboot.service.MachineTrackerService"/>
        <Method name="&lt;init&gt;"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- It is by intention that AccessService class exposes internal representation in this way. -->
    <!-- The class is used to ensure the internal access object acts as a shared resource among the controller classes. -->
    <!-- This is standard practice for the service pattern -->
    <Match>
        <Class name="vendmachtrack.ui.access.AccessService"/>
        <Method name="getAccess"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
</FindBugsFilter>